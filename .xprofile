#!/bin/sh
# .xprofile

# Update fonts
xset +fp /usr/share/fonts/local
xset fp rehash

# .Xresources
xrdb merge /home/bcforres/.Xresources &

# Start urxvt daemon
urxvtd -q -o -f

# Set keyboard layout
setxkbmap -layout us -variant dvp

# Load wallpaper
feh --bg-scale "$HOME/Pictures/System_Pics/Wallpaper/current.jpg"

[ -f ~/.custom_profile ] && source ~/.custom_profile
